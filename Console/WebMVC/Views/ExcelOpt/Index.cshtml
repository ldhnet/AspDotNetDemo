@model UserViewModel
@{
    ViewData["Title"] = "Excel的基本操作";
}
<h1>@ViewData["Title"]</h1>

<p>Excel的基本操作：导入导出等等</p>
 
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Excel上传</h3>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-lg-12">

                <form asp-controller="ExcelOpt" asp-action="ExportExecl" role="ExportExecl" enctype="multipart/form-data" method="post">
                    <label asp-for="IdCardImg"></label>
                    <input type="file" asp-for="IdCardImg" />
                    <button type="submit" class="btn btn-primary">提交</button>
                </form>

            </div>
        </div>
    </div>
</div>


<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">导出Excel</h3>
    </div>
    <div class="panel-body">

        <div class="row">

            <div class="col-lg-12">
                <form asp-controller="ExcelOpt" asp-action="ExportExeclReport" enctype="multipart/form-data" method="post">
                    <button type="submit" class="btn btn-success">导出</button>
                </form>
            </div>
        </div>
    </div>
</div>