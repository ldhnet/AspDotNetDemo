@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<html>
<head>
    <title>登录</title>
</head>
<body class="gray-bg">
    <div class="container animated fadeInDown" style="width:300px">
        <form class="form-horizontal" asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <h2 class="form-signin-heading">WebA</h2>
            <div class="form-group">
                <label for="name">账 号</label>
                <input type="text" asp-for="Account" class="form-control" placeholder="账号" autofocus>
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="name">密 码</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="密码">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="checkbox">
                <label class="pull-right">
                    <input type="checkbox" value="remember-me"> 记住密码
                </label>
            </div>
            <button type="submit" class="btn btn-primary">登  录</button>
        </form>
    </div>
</body>
</html>